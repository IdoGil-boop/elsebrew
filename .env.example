# Google Maps & Places API
# Client-side key (for Maps JavaScript API, Places API, Geocoding API, Maps Embed API in browser)
# Restrict to: HTTP referrers + Maps JavaScript API + Places API + Geocoding API + Maps Embed API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=YOUR_CLIENT_SIDE_API_KEY_HERE

# Server-side key (for Places API (New) calls from Next.js API routes)
# Restrict to: IP addresses (or None for serverless) + Places API (New) only
GOOGLE_MAPS_API_KEY=YOUR_SERVER_SIDE_API_KEY_HERE

# Google OAuth (for Sign in with Google)
NEXT_PUBLIC_GOOGLE_OAUTH_CLIENT_ID=YOUR_GOOGLE_OAUTH_CLIENT_ID_HERE

# Analytics (leave empty to disable)
NEXT_PUBLIC_GA4_MEASUREMENT_ID=

# Buy Me A Coffee
NEXT_PUBLIC_BUYMEACOFFEE_URL=https://www.buymeacoffee.com/yourname

# Mailchimp
MAILCHIMP_FORM_ACTION=https://XXXXX.usX.list-manage.com/subscribe/post?u=XXXXX&id=XXXXX

# LLM API (OpenAI or compatible)
OPENAI_API_KEY=sk-...
# Optional: use a different LLM provider
# LLM_API_KEY=...
# LLM_API_URL=...

# AWS DynamoDB Credentials (for saved places feature)
# Leave empty to use localStorage fallback
# Note: Using DYNAMODB_ prefix to avoid platform restrictions on AWS_ prefix
DYNAMODB_ACCESS_KEY_ID=AKIA...
DYNAMODB_SECRET_ACCESS_KEY=...
DYNAMODB_REGION=us-east-1

# Rate Limiting
# Maximum number of searches allowed per time window (default: 10)
RATE_LIMIT_MAX_SEARCHES=10
# Time window in hours (default: 12)
RATE_LIMIT_WINDOW_HOURS=12

# Stripe Configuration (Premium Subscription - $5/month)
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
# Webhook secret from https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
# Price ID for $5/month subscription product
STRIPE_PRICE_ID=price_your_monthly_subscription_price_id_here

# Application URL (for Stripe redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# DynamoDB Tables
# Note: elsebrew-subscriptions table is required for premium features
DYNAMODB_USERS_TABLE=elsebrew-users
DYNAMODB_SAVED_PLACES_TABLE=elsebrew-saved-places
DYNAMODB_SEARCH_HISTORY_TABLE=elsebrew-search-history
DYNAMODB_PLACE_INTERACTIONS_TABLE=elsebrew-place-interactions
DYNAMODB_RATE_LIMITS_TABLE=elsebrew-rate-limits
DYNAMODB_EMAIL_SUBSCRIPTIONS_TABLE=elsebrew-email-subscriptions
DYNAMODB_SUBSCRIPTIONS_TABLE=elsebrew-subscriptions
